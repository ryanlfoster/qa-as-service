<?xml version="1.0"?>
<config>
    <modules>
        <Etheme_Buyshoprevolution>
            <version>0.1.0</version>
        </Etheme_Buyshoprevolution>
    </modules>
    <frontend>
        <layout>
            <updates>
                <buyshoprevolution>
                    <file>buyshoprevolution.xml</file>
                </buyshoprevolution>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<buyshoprevolution>
				<use>admin</use>
				<args>
					<module>Etheme_Buyshoprevolution</module>
					<frontName>buyshoprevolution</frontName>
				</args>
			</buyshoprevolution>
        </routers>
    </admin>
    <adminhtml>
		<menu>
            <etheme>
                <children>
                    <slider>
                        <title>Slider Configuration</title>
                        <sort_order>3</sort_order>
                        <children>
                            <revolution>
                                <title>Revolution slider</title>
                                <sort_order>3</sort_order>
                                <children>
                                    <upload1>
                                        <title>Manage slides</title>
                                        <sort_order>1</sort_order>
                                        <action>buyshoprevolution/adminhtml_buyshoprevolution</action>
                                    </upload1>

                                </children>
                            </revolution>
                        </children>
                    </slider>
                </children>
            </etheme>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
                         <system>
                            <children>
                                <config>
                                    <children>
                                        <buyshoprevolution>
                                            <title>Buyshop - Revolution slider</title>
                                        </buyshoprevolution>
                                    </children>
                                </config>
                            </children>
                        </system>
                        <etheme>
                            <title>eTheme - BuyShop</title>
                            <children>
                                <slider>
                                    <title>Slider Configuration</title>
                                    <children>
                                        <revolution>
                                            <title>Revolution slider</title>
                                            <children>

                                                <upload1>
                                                    <title>Upload slides</title>
                                                </upload1>
                                            </children>
                                        </revolution>
                                    </children>
                                </slider>
                            </children>
                        </etheme>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>
    <global>
        <models>
            <buyshoprevolution>
                <class>Etheme_Buyshoprevolution_Model</class>
                <resourceModel>buyshoprevolution_mysql4</resourceModel>
            </buyshoprevolution>
            <buyshoprevolution_mysql4>
                <class>Etheme_Buyshoprevolution_Model_Mysql4</class>
                <entities>
                    <buyshoprevolution>
                        <table>buyshoprevolution</table>
                    </buyshoprevolution>
	                <buyshoprevolution_store>
                        <table>buyshoprevolution_store</table>
                    </buyshoprevolution_store>
                </entities>
            </buyshoprevolution_mysql4>
       </models>
       <resources>
	      <buyshoprevolution_setup>
	        <setup>
	          <module>Etheme_Buyshoprevolution</module>
	        </setup>
	        <connection>
	          <use>core_setup</use>
	        </connection>
	      </buyshoprevolution_setup>
	      <buyshoprevolution_write>
	        <connection>
	          <use>core_write</use>
	        </connection>
	      </buyshoprevolution_write>
	      <buyshoprevolution_read>
	        <connection>
	          <use>core_read</use>
	        </connection>
	      </buyshoprevolution_read>
	    </resources>
        <blocks>
            <buyshoprevolution>
                <class>etheme_buyshoprevolution_Block</class>
            </buyshoprevolution>
        </blocks>
        <helpers>
            <buyshoprevolution>
                <class>etheme_buyshoprevolution_Helper</class>
            </buyshoprevolution>
        </helpers>
    </global>
</config>