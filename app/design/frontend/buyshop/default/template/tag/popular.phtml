<div class="block  block-tags">
    <div class="block-title"><strong><span><?php echo $this->__('POPULAR TAGS') ?></span></strong></div>
    <div class="block-content">
        <?php

        if(Mage::getStoreConfig('buyshopconfig/options/tag_cloud')=='js'){
            ?>
           <div style="height: 190px">
            <div id="tagsjs" style="width:230px; height:150px;position:relative;">
            <ul class="tags-list" >
                <?php $count=0; foreach ($this->getTags() as $_tag){ $count++; ?>
                <li><a href="<?php echo rtrim($_tag->getTaggedProductsUrl(),'/') ?>" rel="<?php echo $count;?>" style="font-size:<?php echo $_tag->getRatio()*70+75 ?>%;"><?php echo $this->htmlEscape($_tag->getName()) ?></a></li>
                <?php } ?>

            </ul>
            </div>
           </div>
            <script type="text/javascript">
                jQuery(function(){
                    jQuery('#tagsjs').tagcloud({centrex:100,centrey:100,min_font_size:10,max_font_size:23,zoom:100});
                });
            </script>
            <?php
        }
        else{
            ?>
            <ul class="tags-list">
                <?php foreach ($this->getTags() as $_tag): ?>
                <li><a href="<?php echo $_tag->getTaggedProductsUrl() ?>" style="font-size:<?php echo $_tag->getRatio()*70+75 ?>%;"><?php echo $this->htmlEscape($_tag->getName()) ?></a></li>
                <?php endforeach; ?>
            </ul>
            <?php
        }
        ?>
    </div>
</div>