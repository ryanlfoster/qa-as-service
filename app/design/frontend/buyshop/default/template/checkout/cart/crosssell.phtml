/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php if($this->getItemCount() && Mage::getStoreConfig('buyshopconfig/options/crossels')): ?>

<div class="upsell">
    <h2><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h2>
    <div class="carousel es-carousel-wrapper style0 upsell">
        <div class="es-carousel">
            <div class="row">
                <div class="product_outer">
                    <?php foreach ($this->getItems() as $_product): ?>
                    <?php
                    $widthBig=258;
                    $heightBig=245;
                    $widthSmall=71;
                    $heightSmall=65;
                    $price=$this->getPriceHtml($_product, true);

                    ?>
                    <!--PRODUCT-->
                    <?php  echo Mage::helper('buyshopconfig')->getProductHtml($_product,$this,$widthBig,$heightBig,3,false,true,false,true,$price)?>
                    <?php echo Mage::helper('buyshopconfig')->getProductHover($_product,$this,$widthBig,$heightBig,$widthSmall,$heightSmall,'',false,true,$price)?>
                    <!--PRODUCT EOF-->
                    <?php endforeach; ?>
                </div>
            </div>
        </div>

    </div>
</div>


<script type="text/javascript">
    jQuery('.carousel.style0').elastislide({
        easing: 'easeInOutQuad',
        speed: 1200

    });
        <?php if($this->getItemCount()<=4):?>
    jQuery('.upsell .es-nav').addClass('visible-phone');
        <?php endif ?>
</script>



<?php endif; ?>
