    $columns = $this->getColumns();
?>

<table class="table shopping-cart-table" id="wishlist-table">
    <tbody>
    <tr>
        <?php foreach ($columns as $column): ?>
        <th  class="aligncenter"><?php echo $column->getTitle();?></th>
        <?php endforeach; ?>


    </tr>
    <tr style="display:none">
        <td><img width="136" height="129" alt="" src="img/shopping-cart-img.jpg"></td>
        <td><span class="cart-col-name">Product Name: </span><strong> <a href="#">Nullam id justo sed labore diam diam aliquam nonumy</a></strong></td>
        <td class="aligncenter"><a href="#">Edit</a></td>
        <td class="aligncenter"><span class="cart-col-name">Unit Price: </span>$295.00</td>
